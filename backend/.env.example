# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aitrader?schema=public"

# Redis (required for caching and job queues)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=48h

# Server
PORT=3001
NODE_ENV=development

# Payment Gateway (NOWPayments)
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_IPN_SECRET=
NOWPAYMENTS_SANDBOX=true
NOWPAYMENTS_WEBHOOK_URL=https://your-backend.railway.app/api/subscription/webhook

# Subscription Locking (set to true in production)
PAYMENT_REQUIRED=false

# Error Tracking (Sentry - optional but recommended)
SENTRY_DSN=

# DeepSeek AI
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# RL Service
RL_SERVICE_URL=http://localhost:8000

# Exchange (Aster)
ASTER_API_KEY=
ASTER_API_SECRET=
ASTER_TESTNET=true

# Trading
TRADING_ENABLED=false
TRADING_MODE=signal
STRATEGY_METHODOLOGY=SMC
TRADING_PAIRS=BTC-USD,ETH-USD

# Risk Management
RISK_MAX_PER_TRADE=0.02
RISK_MAX_DRAWDOWN=0.15
RISK_STOP_LOSS_PCT=0.05
